<Window x:Class="ShveinFabric.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShveinFabric"
        mc:Ignorable="d"
        Title="Швейная фабрика" MinHeight="450" MinWidth="800"
        Height="450" Width="800"
        Background="#FFB5D5CA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
            <Image Source="img/logo-01.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Швейная фабрика"  FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        
        <Frame x:Name="frmMain" NavigationUIVisibility="Hidden" Grid.Row="1" Background="White"/>
    </Grid>
</Window>
