<Page x:Class="ShveinFabric.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShveinFabric.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"> 
            <Label Content="Логин"/>
            <TextBox x:Name="txbLogin"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="psbPassword" Margin="0 0 0 10"/>
            <Button x:Name="btnOk" Margin="0 0 0 10" Content="Войти" Click="btnOk_Click"/>
            <Button x:Name="btnReg" Content="Зарегистрироваться" Click="btnReg_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
