<Page x:Class="ShveinFabric.Pages.PageFuruniture"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShveinFabric.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageFuruniture">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="furGrid" Grid.Row="0" SelectionChanged="furGrid_SelectionChanged">
            
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="bckBtn" Content="Назад" Width="127" Height="29" Click="bckBtn_Click"/>
            <Button x:Name="addBtn" Content="Добавить" Width="127" Margin="15 0 0 0" Height="29" Click="addBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
