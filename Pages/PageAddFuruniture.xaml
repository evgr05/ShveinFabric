<Page x:Class="ShveinFabric.Pages.PageAddFuruniture"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShveinFabric.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddFuruniture">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="262">
            <TextBlock Text="Артикул:"/>
            <TextBox x:Name="article" Text="{Binding Article}"/>
            <TextBlock Text="Название:"/>
            <TextBox x:Name="title" Text="{Binding Title}"/>
            <TextBlock Text="Тип:"/>
            <TextBox x:Name="type" Text="{Binding Type}"/>
            <TextBlock Text="Ширина:"/>
            <TextBox x:Name="width" Text="{Binding Width}"/>
            <TextBlock Text="Длина:"/>
            <TextBox x:Name="length" Text="{Binding Length}"/>
            <TextBlock Text="Вес:"/>
            <TextBox x:Name="weigth" Text="{Binding Weight}"/>
            <TextBlock x:Name="txbfile" Text="Изображение"/>
            <Button x:Name="imageBtn" Content="Обзор" Click="imageBtn_Click"/>
            <TextBlock Text="Цена:"/>
            <TextBox x:Name="price" Text="{Binding Price}" Margin="0 0 0 10"/>
            <Button x:Name="saveBtn" Content="Сохранить" Margin="0 0 0 10" Click="saveBtn_Click"/>
            <Button x:Name="backBtn" Content="Назад" Click="backBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
